{
  "permissions": {
    "allow": [
      "Bash(git:*)",
      "Bash(gh:*)",
      "Bash(node:*)",
      "Bash(npm:*)",
      "Bash(npx:*)",
      "Bash(python:*)",
      "Bash(pip:*)",
      "Bash(bun:*)",
      "Bash(dir:*)",
      "Bash(type:*)",
      "Bash(where:*)",
      "Bash(echo:*)",
      "Bash(mkdir:*)",
      "Bash(copy:*)",
      "Bash(move:*)",
      "Bash(del:*)",
      "Bash(ls:*)",
      "Bash(cat:*)",
      "Bash(cp:*)",
      "Bash(mv:*)",
      "Bash(rm:*)",
      "Bash(grep:*)",
      "Bash(find:*)",
      "Bash(date:*)",
      "Bash(wc:*)",
      "Bash(head:*)",
      "Bash(tail:*)",
      "Bash(pwd:*)",
      "Bash(which:*)",
      "Bash(code:*)",
      "Bash(*psi/*)",
      "Skill(rrr)",
      "Skill(recap)",
      "Skill(trace)",
      "Skill(learn)",
      "Skill(project)",
      "Skill(awaken)",
      "Skill(worktree)"
    ],
    "deny": [
      "Bash(rm -rf:*)",
      "Bash(git push --force:*)",
      "Bash(git checkout -- .:*)",
      "Bash(git reset --hard:*)",
      "Bash(git clean -f:*)"
    ],
    "ask": []
  },
  "hooks": {
    "SessionStart": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "bash \"$CLAUDE_PROJECT_DIR\"/.claude/hooks/session-start.sh 2>/dev/null || true"
          }
        ]
      }
    ],
    "SessionEnd": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "bash \"$CLAUDE_PROJECT_DIR\"/.claude/hooks/session-end.sh 2>/dev/null || true"
          }
        ]
      }
    ],
    "PreToolUse": [
      {
        "matcher": "Bash",
        "hooks": [
          {
            "type": "command",
            "command": "bash \"$CLAUDE_PROJECT_DIR\"/.claude/hooks/safety-check.sh 2>/dev/null || true"
          },
          {
            "type": "command",
            "command": "bash \"$CLAUDE_PROJECT_DIR\"/.claude/hooks/git-workflow-validator.sh 2>/dev/null || true"
          }
        ]
      }
    ]
  }
}
